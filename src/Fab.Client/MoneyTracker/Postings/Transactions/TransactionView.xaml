	</UserControl.Resources>
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2.5*" />
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<TextBlock Text="{Binding Path=LocalizedStrings.TransactionView_Date, FallbackValue='Date'}"
				   VerticalAlignment="Bottom"
				   Margin="3,0,0,0" />
		<TextBlock Grid.Column="1"
				   Text="{Binding Path=LocalizedStrings.TransactionView_Category, FallbackValue='Category'}"
				   VerticalAlignment="Bottom"
				   Margin="8,0,0,0" />
		<TextBlock Grid.Column="2"
				   Text="{Binding Path=LocalizedStrings.TransactionView_Price, FallbackValue='Price'}"
				   VerticalAlignment="Bottom"
				   Margin="8,0,0,0" />
		<TextBlock Grid.Column="4"
				   Text="{Binding Path=LocalizedStrings.TransactionView_Quantity, FallbackValue='Quantity'}"
				   VerticalAlignment="Bottom"
				   Margin="8,0,0,0" />
		<TextBlock Grid.Column="6"
				   Text="{Binding Path=LocalizedStrings.TransactionView_Amount, FallbackValue='Amount'}"
				   VerticalAlignment="Bottom"
				   Margin="8,0,0,0" />
		<sdk:DatePicker Grid.Column="0"
						Grid.Row="1"
						x:Name="OperationDate"
						IsTodayHighlighted="True"
						SelectedDateFormat="Long"
						SelectedDate="{Binding Path=OperationDate,
												   Mode=TwoWay,
												   Converter={StaticResource dateTimeUtcToLocal}}"
						VerticalAlignment="Center"
						TabIndex="6"
						IsTabStop="True" />
		<Controls:AutoCompleteComboBox Grid.Column="1"
									   Grid.Row="1"
									   ItemsSource="{Binding Path=Categories}"
									   ValueMemberBinding="{Binding Path=Name}"
									   MinimumPrefixLength="0"
									   Margin="5,0"
									   IsTextCompletionEnabled="True"
									   FilterMode="Custom"
									   ItemFilter="{Binding Path=CategoryFilter}"
									   SelectedItemBinding="{Binding Path=CurrentCategory, Mode=TwoWay}"
									   VerticalAlignment="Center"
									   TabIndex="0"
									   IsTabStop="True">
			<Controls:AutoCompleteComboBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Path=Name}"
								   Foreground="{Binding Path=CategoryType, Converter={StaticResource categoryTypeToColor}}" />
						<TextBlock Text="{Binding Path=Popularity, StringFormat= - \{0\}}"
								   Margin="5,0,0,0" />
					</StackPanel>
				</DataTemplate>
			</Controls:AutoCompleteComboBox.ItemTemplate>
		</Controls:AutoCompleteComboBox>
		<TextBox x:Name="Price"
				 Grid.Row="1"
				 Grid.Column="2"
		         MaxLength="13"
		         common:BindingHelper.UpdateSourceOnChange="True"
		         Text="{Binding Path=Price,
					 Mode=TwoWay,
					 UpdateSourceTrigger=Explicit,
					 ValidatesOnDataErrors=True,
					 ValidatesOnExceptions=True,
					 ValidatesOnNotifyDataErrors=True,
					 NotifyOnValidationError=True,
					 StringFormat=n}"
				 VerticalAlignment="Center"
		         TabIndex="1"
				 Margin="5,0">
			<i:Interaction.Behaviors>
				<Behaviors:DefaultButtonBehavior DefaultButton="{Binding ElementName=Save}" />
				<Behaviors:SelectTextOnFocusBehavior />
			</i:Interaction.Behaviors>
		</TextBox>
		<TextBlock Grid.Row="1"
				   Grid.Column="3"
				   Text="X"
		           Margin="5,0"
		           VerticalAlignment="Center" />
		<TextBox x:Name="Quantity"
				 Grid.Row="1"
				 Grid.Column="4"
		         MaxLength="13"
		         common:BindingHelper.UpdateSourceOnChange="True"
		         Text="{Binding Path=Quantity,
								Mode=TwoWay,
								UpdateSourceTrigger=Explicit,
								ValidatesOnDataErrors=True,
								ValidatesOnExceptions=True,
								ValidatesOnNotifyDataErrors =True,
								NotifyOnValidationError=True,
								StringFormat=n}"
		         MinWidth="50"
		         VerticalAlignment="Center"
		         TabIndex="2"
				 Margin="5,0">
			<i:Interaction.Behaviors>
				<Behaviors:DefaultButtonBehavior DefaultButton="{Binding ElementName=Save}" />
				<Behaviors:SelectTextOnFocusBehavior />
			</i:Interaction.Behaviors>
		</TextBox>
		<TextBlock Grid.Row="1"
				   Grid.Column="5"
				   Text="="
		           Margin="5,0"
		           VerticalAlignment="Center" />
		<TextBlock Grid.Column="6"
				   Grid.Row="1"
		           Foreground="{Binding Path=Amount, Converter={StaticResource balanceToColor}}"
				   Text="{Binding Path=Amount, Converter={StaticResource nullToQuestion}, StringFormat=n}"
		           VerticalAlignment="Center"
				   MinWidth="50"
				   FontSize="16"
				   Margin="5,0" />
		<TextBox x:Name="Comment"
						 Grid.Row="2"
						 Grid.ColumnSpan="3"
						 Text="{Binding Path=Comment, Mode=TwoWay}"
						 VerticalAlignment="Center"
				 MaxLength="255"
				 TextWrapping="Wrap"
				 AcceptsReturn="True"
				 MaxHeight="100"
						 TabIndex="3">
			<ToolTipService.ToolTip>
				<TextBlock Foreground="Black"
						   Text="{Binding Path=LocalizedStrings.TransactionView_Comment, FallbackValue='Notes'}" />
			</ToolTipService.ToolTip>
		</TextBox>
		<Button x:Name="Save"
				Grid.Column="3"
				Grid.ColumnSpan="2"
				Grid.Row="2"
				Content="{Binding Path=LocalizedStrings.TransactionView_Save, FallbackValue='Save'}"
				TabIndex="4" />
		<Button x:Name="Cancel"
				Grid.Column="5"
				Grid.ColumnSpan="2"
				Grid.Row="2"
				Content="{Binding Path=LocalizedStrings.TransactionView_Cancel, FallbackValue='Cancel'}"
		        TabIndex="5" />
	</Grid>
</UserControl>
