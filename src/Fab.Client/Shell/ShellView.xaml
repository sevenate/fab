			 mc:Ignorable="d"
			 Language="{Binding Language, Source={StaticResource cultureSettings}}">
	<UserControl.Resources>
		<Style x:Key="ListBoxStyle1"
			   TargetType="ListBox"
			   BasedOn="{StaticResource DefaultListBoxStyle}" />
		<DataTemplate x:Key="DataTemplate1">
			<TextBlock Text="{Binding Name}"
					   cal:Action.Target="{Binding}"
					   VerticalAlignment="Center"
					   cal:Message.Attach="Show"
					   ToolTipService.ToolTip="{Binding Name}" />
		</DataTemplate>
		<Style x:Key="ListBoxItemStyle1"
