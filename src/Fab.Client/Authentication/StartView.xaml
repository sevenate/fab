<UserControl x:Class="Fab.Client.Authentication.StartView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 mc:Ignorable="d"
			 d:DesignWidth="800"
			 d:DesignHeight="600">
	<Grid Background="{StaticResource Brush_WindowBackground}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ContentControl x:Name="LoginForm"
						HorizontalContentAlignment="Right"
						VerticalContentAlignment="Center" />
		<ContentControl x:Name="RegistrationForm"
						Grid.Column="1"
						HorizontalContentAlignment="Left"
						VerticalContentAlignment="Center" />
		<StackPanel Grid.Row="1"
					Grid.ColumnSpan="2"
					Orientation="Horizontal"
					HorizontalAlignment="Center">
			<TextBlock x:Name="Copyright"
					   TextWrapping="Wrap"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Bottom"
					   Foreground="#FF868686" />
			<TextBlock x:Name="Version"
					   Margin="10,0,0,0"
					   ToolTipService.ToolTip="Client version"
					   TextWrapping="Wrap"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Bottom"
					   Foreground="#FF868686" />
		</StackPanel>
	</Grid>
</UserControl>