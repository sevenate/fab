<UserControl x:Class="Fab.Client.Authentication.TermsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MaxWidth="900">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBox x:Name="Text"
				 TextWrapping="Wrap"
				 BorderThickness="0"
				 BorderBrush="Transparent"
				 IsReadOnly="True"
				 MaxHeight="500"
				 VerticalScrollBarVisibility="Auto">
		</TextBox>
		<StackPanel Grid.Row="1"
					Orientation="Horizontal"
					HorizontalAlignment="Right"
					Margin="0 8 0 0">
			<Button x:Name="Close"
					Style="{StaticResource ButtonStyle}">
				<TextBlock Text="{Binding Path=LocalizedStrings.TermsView_Close, FallbackValue='Close'}"
						   Style="{StaticResource IconButtonTextStyle}"
						   Foreground="{Binding BorderBrush, ElementName=Close}"
						   Margin="10" />
			</Button>
		</StackPanel>
	</Grid>
</UserControl>