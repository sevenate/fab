									   Visibility="{TemplateBinding SeparatorVisibility}"
									   VerticalAlignment="Stretch"
									   Width="1"
									   Opacity="0" />
							<Border x:Name="MouseOverLeftRightSeperator"
									Grid.ColumnSpan="2"
									BorderThickness="1,0"
									BorderBrush="{StaticResource SeperatorBrush}"
									Margin="-1,0,0,0"
									Opacity="0" />
							<Border x:Name="PressedLeftRightSeperator"
